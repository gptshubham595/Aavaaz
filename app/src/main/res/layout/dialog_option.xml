<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:layout_marginLeft="60dp"
    android:layout_marginRight="60dp"
    android:layout_marginBottom="60dp"
    android:layout_marginTop="20dp"
    android:padding="@dimen/padding">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/sports"
    android:layout_below="@id/international"
        android:layout_width="160dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:textColor="#3c3c44"
        android:layout_margin="8dp"
        android:text="खेल"
        android:background="@drawable/shape"
        android:gravity="center"
        android:fontFamily="@font/glegoo"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/homeis"

        android:layout_width="160dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:textColor="#3c3c44"
        android:layout_margin="8dp"
        android:text="होम"
        android:background="@drawable/shape"
        android:gravity="center"
        android:fontFamily="@font/glegoo"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/politics"
        android:layout_margin="8dp"
        android:layout_below="@id/homeis"
        android:layout_width="160dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:textColor="#3c3c44"
        android:text="राजनीति"
        android:fontFamily="@font/glegoo"
        android:background="@drawable/shape"
        android:gravity="center"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/education"
        android:layout_margin="8dp"
        android:layout_below="@id/sports"
        android:fontFamily="@font/glegoo"
        android:layout_width="160dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:textColor="#3c3c44"
        android:text="टैकनोलजी"
        android:background="@drawable/shape"
        android:gravity="center"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/entertainment"
        android:layout_margin="8dp"
        android:fontFamily="@font/glegoo"
        android:layout_below="@id/education"
        android:layout_width="160dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:textColor="#3c3c44"
        android:text="मनोरंजन"
        android:background="@drawable/shape"
        android:gravity="center"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/business"
        android:layout_margin="8dp"
        android:layout_below="@id/politics"
        android:fontFamily="@font/glegoo"
        android:layout_width="160dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:textColor="#3c3c44"
        android:background="@drawable/shape"
        android:gravity="center"
        android:text="क्षेत्रीय"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/agriculture"
        android:layout_margin="8dp"
        android:background="@drawable/shape"
        android:gravity="center"
        android:fontFamily="@font/glegoo"
        android:layout_below="@id/gadget"
        android:layout_width="160dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:textColor="#3c3c44"
        android:text="वायरल"
        android:textSize="15sp" />
<TextView
        android:id="@+id/lifestyle"
        android:layout_below="@id/entertainment"
    android:layout_width="160dp"
    android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:textColor="#3c3c44"
        android:text="लाइफस्टाइल"
        android:fontFamily="@font/glegoo"
        android:background="@drawable/shape"
        android:gravity="center"
        android:layout_margin="12dp"
        android:textSize="15sp" />
<TextView
        android:id="@+id/gadget"
        android:layout_below="@id/lifestyle"
    android:layout_width="160dp"
    android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:textColor="#3c3c44"
        android:text="विविध"
        android:background="@drawable/shape"
        android:gravity="center"
        android:fontFamily="@font/glegoo"
        android:layout_margin="12dp"
        android:textSize="15sp" />
<TextView
        android:id="@+id/international"
        android:layout_below="@id/business"
    android:layout_width="160dp"
    android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:textColor="#3c3c44"
        android:text="अपराध"
        android:layout_margin="12dp"
        android:fontFamily="@font/glegoo"
        android:background="@drawable/shape"
        android:gravity="center"
        android:textSize="15sp" />
      
</RelativeLayout>

</ScrollView>