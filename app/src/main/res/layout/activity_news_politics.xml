<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
 xmlns:android="http://schemas.android.com/apk/res/android"
     
    android:background="#9b9595"
    android:outlineAmbientShadowColor="@color/colorPrimary"
xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".secondpage.NewsPolitics">

<RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/layout"> 
        <ImageView        
			android:id="@+id/button2"
            android:layout_width="60dp"            
			android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/home"            
			android:padding="8dp" />
        <ImageView  android:id="@+id/slide"
            android:layout_width="match_parent"
            android:layout_height="220dp"            
			android:scaleType="fitXY"   android:layout_marginTop="38dp"
			 
			>
        </ImageView>
        <TextView
            android:fontFamily="@font/glegoo"     

			android:id="@+id/heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/slide"
            android:layout_alignParentStart="true"
            android:padding="8dp"
            android:text=" "
            android:textColor="#3c3c44"
            android:textSize="18dp"
            android:textStyle="bold"
            android:typeface="serif" />
   <TextView
            android:layout_width="match_parent"
            android:layout_below="@id/heading"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:padding="8dp"
          android:fontFamily="@font/glegoo"      android:id="@+id/desc"
            android:backgroundTint="#fafafa"
            android:background="@drawable/shape"
            android:text=" "            android:textSize="15dp" />
<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/urllink"
        android:textSize="14sp"
        android:layout_marginLeft="5dp"
    android:fontFamily="@font/glegoo"
        android:text="Read More"
        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@id/up"
    android:textSize="17sp"
    android:layout_marginLeft="5dp"
    android:text=""
    android:fontFamily="@font/glegoo"
    android:textColor="#000095"
    android:id="@+id/urllink"
    />
        <Button
            android:id="@+id/up"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/like" />

        <Button
            android:id="@+id/down"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/up"
            android:background="@drawable/dislike"
            android:textColor="#615c5c" />
        <Button
            android:id="@+id/tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/share"
            android:layout_toEndOf="@id/down"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape"
            android:text="Politics"
            android:textColor="#615c5c"
            android:typeface="sans" />

        <Button
            android:id="@+id/share"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape"
            android:text="Share"
            android:textColor="#615c5c" />
    </RelativeLayout>
</android.support.v7.widget.CardView>